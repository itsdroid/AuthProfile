<%- include('./partials/header') %>


        <% if(success.length>0){ %>
            <div class="flash-message absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
                <span class="inline-block mt-1 mb-1 text-white">
                    <%= success %>
                </span>
            </div>
            <% } %>

<!-- Ensure the header is above other content -->
<style>
    header {
        z-index: 100; 
        position: relative; /* Ensure it stacks above */
    }
</style>

<div class="flex flex-col min-h-screen">
    <div class="flex-1 flex items-center justify-center relative z-0 ">

        <!-- Profile Section -->
        <div class="flex items-center gap-5">
            <div class="w-20 h-20 flex-grow-1 flex-shrink-0 md:w-24 min-width-20">   <a href="/profile/upload/<%= user._id %>"> 
                <img src="/images/uploads/<%=user.profilepic%>" alt="Profile Icon"
                       class="w-full h-full md:w-24 md:h-24 rounded-full border-4 border-white"> 
              </a> </div> 
              <div class="flex flex-col">
                  <h1 class=" text-3xl md:text-4xl text-white font-bold">Welcome <%= user.firstname %></h1>
                  <div class="w-[65vw] md:w-[280px]"> <p class="text-xs text-green-400"> You know that you can change your profile, and it will be saved after you login again.
                  </p> </div>
              </div>
          </div>

        <!-- Timer at Bottom Right -->
        <div id="datetime" class="absolute bottom-0 right-0 text-lg text-white text-right mr-10">
            Loading date and time...
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
