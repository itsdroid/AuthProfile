<%- include('./partials/header') %>


    <% if(success.length>0){ %>
        <div class="flash-message fixed top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-500 z-50">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
            <button onclick="this.parentElement.style.display='none'" class="ml-2 text-white font-bold">&times;</button>
        </div>
        <% } %>

            <!-- Ensure the header is above other content -->
            <style>
                header {
                    z-index: 100;
                    position: relative;
                    /* Ensure it stacks above */
                }
            </style>

            <div class="flex flex-col min-h-screen">
                <div class="flex-1 flex items-center justify-center relative z-0 ">

                    <!-- Profile Section -->
                    <div class="flex items-center gap-5">
                        <div class="w-20 h-20 flex-grow-1 flex-shrink-0 md:w-24 min-width-20"> <a
                                href="/profile/upload/<%= user._id %>">
                                <img src="/images/uploads/<%=user.profilepic%>"
                                    alt="Profile picture of <%= user.firstname %>" onerror="this.src='/images/default-profile.png'"
                                    class="w-full h-full md:w-24 md:h-24 rounded-full border-4 border-white">
                            </a> </div>
                        <div class="flex flex-col">
                            <h1 class=" text-3xl md:text-4xl text-white font-bold">Welcome <%= user.firstname %>
                            </h1>
                            <div class="w-[55vw] md:w-[280px]">
                                <p class="text-x text-green-400">
                                    <%= user.note || 'No note added yet.' %>
                                </p>
                                <a href="/note/edit/<%= user._id %>" class="text-blue-400 text-xs underline">Edit
                                    Note</a>
                            </div>
                        </div>
                    </div>

                    <!-- Timer at Bottom Right -->
                    <div id="datetime" class="absolute bottom-0 right-0 text-lg text-white text-right mr-10">
                        Loading date and time...
                    </div>
                </div>
            </div>

            <%- include('./partials/footer') %>