<%- include('./partials/header') %>

<% if(error.length>0){ %>
    <div class="flash-message absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
    <% } %>

<div class="mt-20 mx-5 tracking-tighter w-full min-h-screen text-white pt-5 ">
    <div class="mx-5">
    <h3 class="text-3xl "> Edit Your Note  </h3>
    <a class=" mb-4 text-green-400" href="/profile"> Back to Profile </a>
    <form action="/note/update/<%=user._id%>" method="post">
        <textarea name="note" rows="4" class="w-full p-2 border rounded bg-gray-800 text-white" placeholder="Add your note here..."><%= user.note %></textarea>
        <input class="px-5 py-2 m-3 outline-none rounded-lg bg-blue-500" type="submit" name="submit"
            value="Save Note">
        </div>
    </form>
</div>


<%- include('./partials/footer') %>